{
  "name": "ganevru",
  "version": "1.0.0",
  "description": "ganev.ru site",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ganevru/ganevru-gatsby.git"
  },
  "license": "MIT",
  "author": "Ivan Ganev <iganevru@gmail.com>",
  "main": "n/a",
  "scripts": {
    "build": "gatsby build",
    "precommit": "lint-staged",
    "deploy": "gatsby build --prefix-paths && gh-pages -d public",
    "dev": "gatsby develop",
    "develop": "gatsby develop",
    "lint": "npm run lint:ts && npm run lint:js",
    "lint-staged": "lint-staged",
    "lint:js": "xo",
    "lint:ts": "tslint \"./src/**/*.ts\" \"./src/**/*.tsx\""
  },
  "dependencies": {
    "@types/lodash": "^4.14.116",
    "@types/node": "^7.0.15",
    "@types/react": "^16.0.20",
    "@types/react-dom": "^16.0.2",
    "@types/react-helmet": "5.0.0",
    "gatsby": "^2.0.91",
    "gatsby-cli": "^2.4.8",
    "gatsby-plugin-google-tagmanager": "^2.0.7",
    "gatsby-plugin-react-helmet": "^3.0.5",
    "gatsby-plugin-styled-components": "^3.0.4",
    "gatsby-plugin-typescript": "^2.0.3",
    "gatsby-source-filesystem": "^2.0.13",
    "grommet": "^2.3.1",
    "grommet-icons": "^4.1.0",
    "lodash": "^4.17.11",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-helmet": "^5.2.0",
    "styled-components": "^4.1.3",
    "ts-loader": "^2.3.7",
    "typescript": "^2.8.0"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "ts-lint": "4.5.1",
    "xo": "^0.18.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "xo --fix",
      "git add"
    ]
  }
}
